<h1>Candidate Registeration</h1>

<%= form_for @candidate do |f| %>
	<% @candidate.errors.full_messages.each do |msg| %>
		<li> <%= msg %> </li>
	<% end %>

	<div class="field">
	  <%= f.label :name %><br />
	  <%= f.text_field :name %>
	</div>

	<div class="field">
	  <%= f.label :email %><br />
	  <%= f.email_field :email %>
	</div>

	<div class="field">
	  <%= f.label :phone %><br />
	  <%= f.text_field :phone %>
	</div>

	<div class="field">
		<%= f.label :resume %>
		<%= f.file_field :resume %>
	</div>

	<div class="actions">
	  <%= f.submit "Create" %>
	</div>

<% end %>