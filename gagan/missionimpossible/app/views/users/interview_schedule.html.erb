
<%= form_tag( interview_fixed_path, :class => "form-horizontal", method: :post) do %>

	<fieldset>
		<legend>Schedule Interview for Candidate</legend>

		<div class="form-group">
	    <label for="candidate" class="col-lg-2 control-label">Select Candidate: </label>
	    <div class="col-lg-4">
	    	<%= select_tag(:candidate_id, options_for_select(@candidates.collect{ |u| 
			[u.name, u.id]}), class: 'form-control') %>
	    </div>
  	</div>

  	<div class="form-group">
	    <label for="recuriter" class="col-lg-2 control-label">Select Recuriter:</label>
	    <div class="col-lg-4">
		    <%= select_tag(:user_id, options_for_select(@users.collect{ |u| 
				[u.first_name, u.id]}), class: 'form-control') %>
	    </div>
  	</div>

  	<div class="form-group">
	    <label for="interview" class="col-lg-2 control-label">Select Interview Date:</label>
	    <div class="col-lg-6">
		    <%= datetime_select(:start_datetime, 'datetime', :order => [:day, :month, :year, :hour,:minute], :html=>{:class => 'form-control'}) %>
	    </div>
  	</div>

