		<%= select_tag(:candidate_id, options_for_select(@candidates.collect{ |u| 
			[u.name, u.id]})) %>

		Select Recuriter: 
		<%= select_tag(:user_id, options_for_select(@users.collect{ |u| 
			[u.first_name, u.id]})) %>

		Select Interview Date: 
		<%= datetime_select(:start_datetime, 'datetime', :order => [:day, :month, :year, :hour,:minute]) %> -->

	<!-- 	<div class="actions">
	    <%= submit_tag "Schedule" %>
	  </div> -->

	  <div class="form-group">
      <div class="col-lg-6 col-lg-offset-2">
        <%= submit_tag "Schedule", class: "btn btn-primary" %>
      </div>
    </div>
	</fieldset>
	
<% end %>