<h2>Upcoming Interviews</h2>

<table border="1" style="width:50%">
	<tr>
		<th> Candidate Name </th>
		<th> Profile </th>
		<th> Interview Date and Time </th>
		<th> Comment </th>
	</tr>

	<% @interview.each do |d| %>
		<% if d.comment.nil? %>
			<tr>
				<td> <%= d.candidate.name %> </td>
				<td> <%= link_to "Profile", candidate_path(id: d.candidate) %> </td>
				<td> <%= d.dateandtime %> </td>
				<td> <%= link_to "Comment", comment_path(id: d.id) %> </td>
			</tr>
		<% end %>
	<% end %>
</table>

<%= link_to "Back", profile_path %>