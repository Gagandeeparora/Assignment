<%= form_for Interview.new, url: add_comment_path, 
			:html => {:class => "form-horizontal"}, method: :post do |f| %>

	<fieldset>
		<legend>Comment</legend>
		<%= f.hidden_field :interview_id, :value => @interview.id %>

		<div class="form-group">
      <label for="inputfname" class="col-lg-2 control-label">Comment</label>
      <div class="col-lg-6">
       <%= f.text_area :comment, class: "form-control" %>
      </div>
    </div>

 		<div class="form-group">
      <div class="col-lg-6 col-lg-offset-2">
         <%= f.submit "SAVE", class: "btn btn-primary" %>
      </div>
    </div>
	</fieldset>
<% end %>
