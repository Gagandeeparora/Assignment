<h3> <center> Archieves </center> </h3>

<table class="table table-striped table-hover ">
  <thead>
		<tr>
			<th> Candidate Name </th>
			<th> Interview Date and Time </th>
			<th> Profile </th>
			<th> Comment </th>
		</tr>
	</thead>

	<tbody>
		<% count = ((params[:page] || 1).to_i - 1) * 4
			@interview.each do |d| %>
			<% unless d.comment.nil? %>
				<tr class="info">
					<td> <%= d.candidate.name %> </td>
					<td> <%= link_to "Profile", candidate_path(id: d.candidate) %> </td>
					<td> <%= d.dateandtime %> </td>
					<td> <%= d.comment %> </td>
				</tr>
			<% end %>
		<% end %>
		<%= will_paginate @interview %> 
	</tbody>
</table>

<%= link_to "Back", profile_path %>

