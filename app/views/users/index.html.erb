<h3><center>List of all users</center></h3></br>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th> S.No. </th>
      <th> First Name </th>
      <th> Last Name </th>
			<th> Email </th>
			<th> Edit </th>
			<th> Delete </th>
    </tr>
  </thead>

  <tbody>
    <% count = ((params[:page] || 1).to_i - 1) * 4
    @users.each_with_index do |user, index| %>
			<tr class="info">
				<td> <%= count + index + 1 %> </td>
				<td> <%= user.first_name %> </td> 
				<td> <%= user.last_name %></td> 
				<td> <%= user.email %> </td>
				<td> <%= link_to "edit", admin_edit_path(id: user.id) %> </td>
				<td> <%= link_to "delete", delete_path(id: user.id) %> </td>	
			</tr>
		<% end %>  
		<%= will_paginate @users %>
  </tbody>
</table> 